<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <div class="jumbotron">
            <h1>Welcome to SongSearch!</h1>
            <br>
            <form method="GET">
                <label for="artist"><strong>Artist:</strong></label>
                <input type="text" id="artist" name="artist" placeholder="Search artists"><br><br>
                <input type="submit" value="Submit">
            </form>
            <ul>
                <% try{ artist_results.forEach(function(artist) { %>
                    <li>
                        <% if (artist["wrapperType"]=='audiobook') { %>
                            <strong>
                                <%= artist["artistName"] %>
                            </strong>
                            <span><%= artist["collectionName"] %></span>
                            <span><%= artist["collectionPrice"] %></span>
                            <img src='<%= artist["artworkUrl100"] %>' width="250" />
                            
                        
                        <% } else if (artist["wrapperType"]=='track') { %>
                            <strong>
                                <%= artist["artistName"] %>
                            </strong>
                            <span><%= artist["trackName"] %></span>
                            <span><%= artist["trackPrice"] %></span>
                            <img src='<%= artist["artworkUrl100"] %>' width="250" />
                        <% } %>
                    </li>
                    <% }) ?? "" ; } catch(error){console.log(error)}%>
            </ul>
        </div>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>

</html>